  "voice": {
    "personality": [
      "Confident, not arrogant — we know this works",
      "Revolutionary, not combative — empowering, not attacking",
      "Practical, not visionary — dollars saved today, not distant future",
      "Direct, not salesy — straight talk about ROI and results"
    ],
    "targetAudience": "Restaurant owners and operators who lose revenue to missed calls, high commissions, and understaffing",
    "toneByContext": {
      "marketing": "Bold, results-focused, data-driven. Use specific numbers. Example: 'Stop losing $31,000/year to missed calls.'",
      "product": "Clear, helpful, efficient. No jargon. Example: 'Order placed successfully. The customer will receive confirmation on WhatsApp.'",
      "support": "Warm, patient, solution-oriented. Example: 'Let me help you get that sorted out right away.'",
      "error": "Honest, reassuring, actionable. Example: 'Something went wrong with the order sync. We're reconnecting now — your orders are safe.'"
    },
    "keyThemes": [
      "Revenue recovery — every missed call is lost money",
      "Ownership — own your customers, don't rent marketplace space",
      "Always-on — 24/7, never sick, never quits",
      "Measurable ROI — specific dollar amounts, not vague promises"
    ],
    "wordsWeUse": ["AI agents", "AI ordering agents", "AI-powered", "recover", "capture", "own", "direct", "efficient", "24/7", "never miss", "revenue", "every order"],
    "wordsWeAvoid": ["chatbot", "bot", "artificial intelligence", "smart", "virtual assistant", "disrupt", "leverage", "synergy", "maybe", "try", "revolutionize", "hopefully"]
  },

  "visualIdentity": {
    "theme": "Dark-mode-first",
    "backgrounds": ["#000000 (pure black)", "#0a0a0a (near-black, preferred)"],
    "preferGradientFor": ["Hero headings", "Primary CTAs", "Brand accent moments"],
    "cardStyle": {
      "tailwind": "bg-white/5 border border-white/10 rounded-xl backdrop-blur-sm",
      "css": "background: rgba(255,255,255,0.05); border: 1px solid rgba(255,255,255,0.1); border-radius: 12px; backdrop-filter: blur(4px);"
    },
    "hoverStyle": {
      "tailwind": "hover:border-[#00B7FF]/50 hover:shadow-lg hover:shadow-[#00B7FF]/10",
      "css": "border-color: rgba(0,183,255,0.5); box-shadow: 0 4px 20px rgba(0,183,255,0.1);"
    },
    "buttonPrimary": {
      "tailwind": "bg-gradient-to-r from-[#00B7FF] to-[#7A2EFF] rounded-xl text-white font-semibold",
      "css": "background: linear-gradient(to right, #00B7FF, #7A2EFF); border-radius: 12px; color: #fff; font-weight: 600;"
    },
    "buttonSecondary": {
      "tailwind": "border border-white/20 bg-white/5 rounded-xl text-white",
      "css": "border: 1px solid rgba(255,255,255,0.2); background: rgba(255,255,255,0.05); border-radius: 12px; color: #fff;"
    },
    "gradientText": {
      "tailwind": "bg-gradient-to-r from-[#00B7FF] via-[#7A2EFF] to-[#C300FF] bg-clip-text text-transparent",
      "css": "background: linear-gradient(to right, #00B7FF, #7A2EFF, #C300FF); -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text;",
      "usage": "Hero headings and key brand moments only — never on body text"
    },
    "borderRadius": { "sm": "8px", "md": "12px", "lg": "16px", "xl": "24px" },
    "spacing": "4px grid: 4, 8, 12, 16, 24, 32, 48, 64, 96",
    "glowEffect": "box-shadow: 0 0 20px rgba(0, 183, 255, 0.3)",
    "antiPatterns": {
      "buttons": [
        "Never use flat solid blue (#2563eb) — always use CTA gradient",
        "Never use border-radius below 8px — minimum is 8px, default 12px",
        "Never use Arial or system default — always use Inter"
      ],
      "cards": [
        "Never use solid white backgrounds — use rgba(255,255,255,0.05)",
        "Never use sharp corners (0px radius) — minimum is 8px",
        "Always include a hover state with cyan border glow"
      ],
      "gradientText": [
        "Never omit the cyan stop — all three stops required (cyan, purple, magenta)",
        "Never use top-to-bottom direction — always left-to-right",
        "Never apply gradient text to body copy — headings and hero text only"
      ]
    }
  },

  "motion": {
    "transitionFast": { "duration": "150ms", "easing": "ease", "css": "transition: all 150ms ease;", "usage": "Hover states, button feedback, small UI changes" },
    "transitionNormal": { "duration": "250ms", "easing": "ease", "css": "transition: all 250ms ease;", "usage": "Card hovers, panel reveals, nav transitions" },
    "reducedMotion": { "css": "@media (prefers-reduced-motion: reduce) { *, *::before, *::after { animation-duration: 0.01ms !important; transition-duration: 0.01ms !important; } }" }
  },

  "responsive": {
