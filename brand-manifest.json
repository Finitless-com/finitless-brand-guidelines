  "company": {
    "name": "Finitless",
    "legalName": "Finitless",
    "tagline": "Never Miss a Sale. Ever.",
    "description": "AI ordering agents that recover missed revenue for restaurants via voice, WhatsApp, and web chat.",
    "website": "https://finitless.com",
    "founder": "Sergio Khoury",
    "industry": "Restaurant Technology / AI",
    "targetAudience": "Restaurant owners and operators"
  },

  "logo": {
    "concept": "Letter N merged with the infinity symbol. Two interlocking angular shapes with a cyan-to-magenta gradient.",
    "wordmark": "FINITLESS in BEASIGNE font, all caps, geometric sans-serif with distinctive letter cuts.",
    "rules": {
      "clearSpace": "Minimum 50% of icon height on all sides",
      "minimumSize": "24px height for icon, 80px width for full logo",
      "restrictions": [
        "Never stretch — resize proportionately only",
        "Never modify or recreate the icon",
        "Use only supplied brand stamp files",
        "Never add effects (shadows, outlines, glow) to the logo itself"
      ]
    },
    "variants": {
      "colorOnDark": {
        "description": "Full gradient icon + white wordmark on dark background (PREFERRED)",
        "icon": "assets/icons/finitless-icon-on-dark-2000.png",
        "logo": "assets/logos/finitless-logo-horizontal-on-dark.png"
      },
      "colorOnLight": {
        "description": "Full gradient icon + black wordmark on light background",
        "icon": "assets/icons/finitless-icon-on-light-2000.png",
        "logo": "assets/logos/finitless-logo-horizontal-on-light.png"
      },
      "monochromeWhite": {
        "description": "All-white version for dark backgrounds",
        "logo": "assets/logos/finitless-logo-square-on-dark.png"
      },
      "monochromeBlack": {
        "description": "All-black version for light backgrounds",
        "logo": "assets/logos/finitless-logo-square-on-light.png"
      }
    }
  },

  "colors": {
    "designerOriginal": {
      "note": "Original 2-stop gradient specified by the brand designer (for print/reference)",
      "gradientStart": { "hex": "#00CCFF", "rgb": [0, 204, 255], "name": "Cyan" },
      "gradientEnd": { "hex": "#FF00FF", "rgb": [255, 0, 255], "name": "Magenta" }
    },
    "primary": {
      "note": "Web-adapted 3-stop gradient (recommended for all digital use)",
      "cyan": { "hex": "#00B7FF", "rgb": [0, 183, 255], "hsl": [197, 100, 50], "name": "Finitless Cyan", "usage": "Primary accent, links, CTAs, gradient start" },
      "purple": { "hex": "#7A2EFF", "rgb": [122, 46, 255], "hsl": [262, 100, 59], "name": "Finitless Purple", "usage": "Gradient midpoint, secondary accent" },
      "magenta": { "hex": "#C300FF", "rgb": [195, 0, 255], "hsl": [286, 100, 50], "name": "Finitless Magenta", "usage": "Gradient end, tertiary accent" }
    },
    "neutral": {
      "black": { "hex": "#000000", "rgb": [0, 0, 0], "usage": "Pure black, maximum contrast" },
      "background": { "hex": "#0a0a0a", "rgb": [10, 10, 10], "usage": "Primary dark background" },
      "white": { "hex": "#FFFFFF", "rgb": [255, 255, 255], "usage": "Primary text on dark, light backgrounds" }
    },
    "semantic": {
      "error": { "hex": "#ff3b45", "rgb": [255, 59, 69], "usage": "Errors, alerts, problem states" },
      "success": { "hex": "#22c55e", "rgb": [34, 197, 94], "usage": "Success, positive states" },
      "warning": { "hex": "#f59e0b", "rgb": [245, 158, 11], "usage": "Caution states, pending actions" },
      "info": { "hex": "#eaf4ff", "rgb": [234, 244, 255], "usage": "Informational, light tint" }
    },
    "gradients": {
      "brand": {
        "css": "linear-gradient(to right, #00B7FF, #7A2EFF, #C300FF)",
        "tailwind": "bg-gradient-to-r from-[#00B7FF] via-[#7A2EFF] to-[#C300FF]",
        "stops": ["#00B7FF", "#7A2EFF", "#C300FF"],
        "usage": "Hero text, logo accent, key brand moments"
      },
      "cta": {
        "css": "linear-gradient(to right, #00B7FF, #7A2EFF)",
        "tailwind": "bg-gradient-to-r from-[#00B7FF] to-[#7A2EFF]",
        "stops": ["#00B7FF", "#7A2EFF"],
        "usage": "Buttons, interactive elements, CTAs"
      },
      "glow": {
        "css": "linear-gradient(to right, rgba(0,183,255,0.2), rgba(122,46,255,0.2))",
        "tailwind": "bg-gradient-to-r from-[#00B7FF]/20 to-[#7A2EFF]/20",
        "usage": "Background tints, hover states, subtle accents"
      }
    },
    "platformDiscrepancies": {
      "hubspot": {
        "note": "HubSpot has incorrect values — should be updated to match canonical colors",
        "current": { "primary": "#18a3f5", "secondary": "#5c53eb", "accent": "#d93bff" },
        "shouldBe": { "primary": "#00B7FF", "secondary": "#7A2EFF", "accent": "#C300FF" }
      },
      "salesPresentations": {
        "note": "Sales presentation uses 2-stop gradient — should add purple midpoint",
        "current": { "cyan": "#00D4FF", "magenta": "#DD00FF" },
        "shouldBe": { "cyan": "#00B7FF", "purple": "#7A2EFF", "magenta": "#C300FF" }
      }
    }
