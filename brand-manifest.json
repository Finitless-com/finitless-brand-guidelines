  "voice": {
    "personality": [
      "Confident, not arrogant — we know this works",
      "Revolutionary, not combative — empowering, not attacking",
      "Practical, not visionary — dollars saved today, not distant future",
      "Direct, not salesy — straight talk about ROI and results"
    ],
    "targetAudience": "Restaurant owners and operators who lose revenue to missed calls, high commissions, and understaffing",
    "toneByContext": {
      "marketing": "Bold, results-focused, data-driven. Use specific numbers. Example: 'Stop losing $31,000/year to missed calls.'",
      "product": "Clear, helpful, efficient. No jargon. Example: 'Order placed successfully. The customer will receive confirmation on WhatsApp.'",
      "support": "Warm, patient, solution-oriented. Example: 'Let me help you get that sorted out right away.'",
      "error": "Honest, reassuring, actionable. Example: 'Something went wrong with the order sync. We're reconnecting now — your orders are safe.'"
    },
    "keyThemes": [
      "Revenue recovery — every missed call is lost money",
      "Ownership — own your customers, don't rent marketplace space",
      "Always-on — 24/7, never sick, never quits",
      "Measurable ROI — specific dollar amounts, not vague promises"
    ],
    "wordsWeUse": ["recover", "capture", "own", "direct", "efficient", "24/7", "never miss", "revenue", "every order"],
    "wordsWeAvoid": ["chatbot", "automate", "disrupt", "leverage", "synergy", "maybe", "try", "hopefully"]
  },

  "visualIdentity": {
    "theme": "Dark-mode-first",
    "backgrounds": ["#000000 (pure black)", "#0a0a0a (near-black, preferred)"],
    "preferGradientFor": ["Hero headings", "Primary CTAs", "Brand accent moments"],
    "cardStyle": "bg-white/5 border border-white/10 rounded-xl backdrop-blur-sm",
    "hoverStyle": "hover:border-[#00B7FF]/50 hover:shadow-lg hover:shadow-[#00B7FF]/10",
    "buttonPrimary": "bg-gradient-to-r from-[#00B7FF] to-[#7A2EFF] rounded-xl text-white font-semibold",
    "buttonSecondary": "border border-white/20 bg-white/5 rounded-xl text-white",
    "borderRadius": { "sm": "8px", "md": "12px", "lg": "16px", "xl": "24px" },
    "spacing": "4px grid: 4, 8, 12, 16, 24, 32, 48, 64, 96",
    "glowEffect": "box-shadow: 0 0 20px rgba(0, 183, 255, 0.3)"
  },

